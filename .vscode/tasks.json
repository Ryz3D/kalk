    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "C:/MinGW/bin/gcc -g -Wall -std=c2x -D WIN -o ${workspaceFolderBasename}.exe ${workspaceFolderBasename}.c -lm",
            "problemMatcher": "$gcc",
            "presentation": {
                "reveal": "silent",
            }
        }
    ]
}